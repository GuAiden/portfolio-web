---
import ThemeIcon from "../Icons/ThemeIcon";
---

<header class="bg-base-200 text-base-content shadow-md w-fit mx-auto rounded-full sticky top-5">
  <nav class="mx-auto flex max-w-7xl items-center p-4 gap-2" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">Your Company</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z" />
        </svg>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <div class="relative">
        <button type="button" class="flex items-center gap-x-1 text-sm font-semibold leading-6 " aria-expanded="false">
          Salaries
          <svg class="h-5 w-5 flex-none " viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
      <a href="/FirmProfiles" class="text-sm font-semibold leading-6 ">Firm Profiles</a>
      <a href="/ApplicationDates" class="text-sm font-semibold leading-6 ">Application Dates</a>
      <a href="/TechPacks" class="text-sm font-semibold leading-6 ">Tech Packs</a>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <ThemeIcon client:only="react" />
    </div>
  </nav>
</header>
